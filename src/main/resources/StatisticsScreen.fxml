<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<TabPane id="pane" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.111"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="parkinggarage.controllers.StatisticsController">
    <Tab text="Money">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <PieChart fx:id="pieMoneyStats" animated="false" legendVisible="false" title="PieChart"
                      GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>

            <LineChart fx:id="lchartMoneyStats" GridPane.hgrow="ALWAYS" animated="false" prefWidth="548.0" title="Money per car"
                       GridPane.columnSpan="2147483647" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                <xAxis>
                    <NumberAxis  upperBound="1000" label="Ticks" side="BOTTOM"/>
                </xAxis>
                <yAxis>
                    <NumberAxis  upperBound="500" label="Amount of Money" side="LEFT"/>
                </yAxis>
            </LineChart>

            <GridPane GridPane.columnIndex="1">
                <Label GridPane.columnIndex="0">Total Money Adhoc Cars: </Label>
                <Text fx:id="txtMoneyAdhoc" GridPane.columnIndex="1"/>
                <Label GridPane.ColumnIndex="0" GridPane.RowIndex="1">Total Money Reserved Cars: </Label>
                <Text fx:id="txtMoneyReserved" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
        </GridPane>
    </Tab>
    <Tab text="Mobility">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <PieChart fx:id="pieCarStats"
                      animated="false"
                      legendVisible="false"
                      title="Car Mobility"
                      GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>

            <LineChart fx:id="lchartCarStats" GridPane.columnSpan="2147483647" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                <xAxis>
                    <NumberAxis upperBound="1000" label="Ticks" side="BOTTOM"  />
                </xAxis>
                <yAxis>
                    <NumberAxis upperBound="500" label="Number of cars" side="LEFT"/>
                </yAxis>
            </LineChart>

            <GridPane GridPane.columnIndex="1">
                <Label GridPane.columnIndex="0">Total Adhoc Cars: </Label>
                <Text fx:id="txtMobilityAdhoc" GridPane.columnIndex="1"/>
                <Label GridPane.ColumnIndex="0" GridPane.RowIndex="1">Total Pass Cars: </Label>
                <Text fx:id="txtMobilityPass" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="2">Total Reserved Cars: </Label>
                <Text fx:id="txtMobilityReserved" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>
        </GridPane>
    </Tab>
</TabPane>
